<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/static/css/reboot.css' />
    <link rel='stylesheet' href='/static/css/index.css' />
  </head>
  <body>

    <header>
      <img src="https://cadexchanger.com/assets/images/icon48.png" title="CAD Exchanger">
      <h1><%= header %></h1>
    </header>

    <div class="model-cards">

      <!-- Card (button) for importing original (custom) model. -->
      <div class="model-card" id="import-button">
        <div class="loader hidden"></div>
        <input hidden type="file" name="inputModel" id="inputModel" accept=".stp,.step">
        <img class="card-image" src="/static/media/import-button-image.png" title="Import button">
        <span class="card-title">Import model</span>
      </div>

      <!-- Form cards of converted models. "prebuiltModels" object comes from index route. -->
      <% prebuiltModels.forEach(theModel => { %>
        <a class="model-card" href="<%= theModel.href %>">
          <!-- Model thumbnail: -->
          <img class="card-image" src="<%= theModel.src %>" title="<%= theModel.title %>">
          <!-- Model name: -->
          <span class="card-title"><%= theModel.title %></span>
        </a>
      <% }) %>

    </div>

    <script type="module" src="/static/js/index.js"></script>

  </body>
</html>
